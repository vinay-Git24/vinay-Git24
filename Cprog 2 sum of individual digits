/* WAP to find the sum of the individual digits of a positive integers*/
#include <stdio.h>

int main()
{
    int n,k=1,sum=0;
    printf("Enter the numbes whose digit to be added :\n");
    scanf("%d",&n);
    while(n!=0)
    {
        k=n%10;sum=sum+k;k=n/10;n=k;
    }
    printf("sumof the digit :%d\n",sum);
    

    return 0;
}

